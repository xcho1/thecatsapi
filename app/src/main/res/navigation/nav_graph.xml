<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/catsFragment">

    <fragment
        android:id="@+id/catsFragment"
        android:name="com.thecatapi.cats.CatsFragment"
        tools:layout="@layout/fragment_cats">

        <action
            android:id="@+id/action_catsFragment_to_catDetailsFragment"
            app:destination="@id/catDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/catDetailsFragment"
        android:name="com.thecatapi.cats.CatDetailsFragment"
        tools:layout="@layout/fragment_cat_details" >
        <argument
            android:name="image_id"
            app:argType="string" />
    </fragment>

</navigation>